<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Map2Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/grocerymap" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="vertical">
            <ImageView
                    android:src="@drawable/map2v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/imageView4"
                    android:layout_marginTop="70dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="104dp"
                    android:layout_height="373dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout9">
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="104dp"
                        android:layout_height="93dp" android:id="@+id/BakeryBtn"/>
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/BakedBtn"
                        android:layout_marginTop="20dp"/>
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="105dp"
                        android:layout_height="40dp" android:id="@+id/ProduceBtn1" android:layout_marginTop="11dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="30dp"
                            android:layout_height="160dp" android:id="@+id/ProduceBtn2"/>
                    <Button
                            android:background="@android:color/transparent"

                            android:layout_width="60dp"
                            android:layout_height="160dp" android:id="@+id/ProduceBtn3"
                            android:layout_marginLeft="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout9"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout9" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:id="@+id/linearLayout11">
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="150dp"
                        android:layout_height="40dp" android:id="@+id/JuiceBtn" android:layout_marginLeft="20dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="120dp" android:id="@+id/SugarBtn" android:layout_weight="1"
                            android:layout_marginTop="28dp" android:layout_marginLeft="30dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="120dp" android:id="@+id/FLourBtn" android:layout_weight="1"
                            android:layout_marginTop="28dp" android:layout_marginLeft="30dp"/>


                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="100dp" android:id="@+id/WheatBtn" android:layout_weight="1"
                            android:layout_marginTop="10dp" android:layout_marginLeft="30dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="100dp" android:id="@+id/JunkBtn" android:layout_weight="1"
                            android:layout_marginTop="10dp" android:layout_marginLeft="30dp"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout11" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout9"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout9" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:id="@+id/linearLayout12">
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="430dp"
                        android:layout_height="30dp" android:id="@+id/CheckoutBtn" android:layout_marginLeft="28dp"
                        android:layout_marginTop="33dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout11" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
                    app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout13">
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="150dp"
                        android:layout_height="40dp" android:id="@+id/CheeseBtn" android:layout_marginTop="-10dp"
                        android:layout_marginLeft="10dp"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="120dp" android:id="@+id/OilBtn" android:layout_weight="1"
                            android:layout_marginTop="28dp" android:layout_marginLeft="0dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="120dp" android:id="@+id/ImportedBtn" android:layout_weight="1"
                            android:layout_marginTop="28dp" android:layout_marginLeft="30dp"/>


                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="110dp" android:id="@+id/PetsBtn" android:layout_weight="1"
                            android:layout_marginTop="10dp" android:layout_marginLeft="0dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="100dp" android:id="@+id/HouseHoldBtn" android:layout_weight="1"
                            android:layout_marginTop="10dp" android:layout_marginLeft="30dp"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout13" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout13"
                    app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout14">
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="80dp"
                        android:layout_height="40dp" android:id="@+id/DairyBtn" android:layout_marginLeft="15dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="120dp" android:id="@+id/CannedBtn" android:layout_weight="1"
                            android:layout_marginTop="28dp" android:layout_marginLeft="-20dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="40dp"
                            android:layout_height="120dp" android:id="@+id/SpicesBtn" android:layout_weight="1"
                            android:layout_marginTop="28dp" android:layout_marginLeft="30dp"/>


                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="110dp"
                            android:layout_height="110dp" android:id="@+id/WineBtn" android:layout_weight="1"
                            android:layout_marginTop="10dp" android:layout_marginLeft="-20dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout14"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout14" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout12"
                    app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintHorizontal_bias="0.78">
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="80dp"
                        android:layout_height="165dp" android:id="@+id/MeatBtn" android:layout_marginTop="-5dp"/>
                <Button
                        android:background="@android:color/transparent"
                        android:layout_width="80dp"
                        android:layout_height="165dp" android:id="@+id/DeliBtn" android:layout_marginTop="35dp"/>




            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>