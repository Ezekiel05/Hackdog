<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/grocerymap" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.25">
        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                               android:layout_height="match_parent"
                                                               android:orientation="vertical">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/map1_final"
                        android:id="@+id/imageView3" android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp" app:layout_constraintVertical_bias="0.050000012"
                        android:id="@+id/linearLayout2"
                >
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="69dp"
                            android:id="@+id/NutsBtn" android:background="@android:color/transparent"
                            android:layout_weight="1" android:layout_marginTop="30dp"/>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="79dp"
                            android:id="@+id/DriedBtn" android:background="@android:color/transparent"
                            android:layout_marginTop="20dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:id="@+id/FreshHerbBtn" android:background="@android:color/transparent"
                            android:layout_marginTop="50dp"/>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:id="@+id/FreshFruitBtn" android:background="@android:color/transparent"
                            android:layout_marginTop="10dp"/>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:id="@+id/FreshVegBtn" android:background="@android:color/transparent"
                            android:layout_marginTop="15dp"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout2" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" android:id="@+id/linearLayout3"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0">
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/riceandgrainsbtn"
                            android:layout_marginLeft="40dp" android:layout_marginTop="20dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/lentilsbeansbtn"
                            android:layout_marginLeft="40dp" android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout3" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" android:id="@+id/linearLayout4">
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/processedbtn"
                            android:layout_marginLeft="40dp" android:layout_marginTop="40dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/grilledredbtn"
                            android:layout_marginLeft="22dp" android:layout_marginTop="40dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/farmedfishbtn"
                            android:layout_marginLeft="22dp" android:layout_marginTop="40dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/freshseafoodbtn"
                            android:layout_marginLeft="20dp" android:layout_marginTop="40dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/freshchcknbtn"
                            android:layout_marginLeft="22dp" android:layout_marginTop="40dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_height="80dp" android:id="@+id/freshpigbtn"
                            android:layout_marginLeft="20dp" android:layout_marginTop="40dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:id="@+id/linearLayout5"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="442dp"
                            android:layout_height="wrap_content" android:id="@+id/cannedbtn" android:layout_weight="1"
                            android:layout_marginTop="50dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.26999998" android:id="@+id/linearLayout6">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/refinedbtn"
                            android:layout_weight="1" android:layout_marginLeft="120dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/whitebtn" android:layout_weight="1"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/artificialbtn"
                            android:layout_weight="1" android:layout_marginLeft="10dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/oilbtn"
                            android:layout_weight="1" android:layout_marginLeft="10dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/darkbtn"
                            android:layout_weight="1" android:layout_marginLeft="3dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/honeybtn"
                            android:layout_weight="1" android:layout_marginLeft="20dp"/>


                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="116dp"
                        android:layout_height="69dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout6" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                        app:layout_constraintVertical_bias="0.87" android:id="@+id/linearLayout7">
                    <Button

                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/button13" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout6" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_bias="0.62" app:layout_constraintVertical_bias="0.04000002"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout5" android:id="@+id/linearLayout8">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp" android:id="@+id/Teabtn"
                            android:layout_marginTop="80dp" android:layout_marginLeft="30dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp" android:id="@+id/Alcoholbtn"
                            android:layout_marginTop="28dp" android:layout_marginLeft="30dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp" android:id="@+id/Carbonatedbtn"
                            android:layout_marginTop="30dp" android:layout_marginLeft="30dp"/>


                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="495dp"
                        android:layout_height="113dp" app:layout_constraintStart_toEndOf="@+id/linearLayout7"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout8" android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/potatobtn" android:layout_weight="1"
                            android:layout_marginTop="40dp" android:layout_marginLeft="80dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/microwavebtn"
                            android:layout_weight="1"
                            android:layout_marginTop="40dp" android:layout_marginLeft="20dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/smokedbtn" android:layout_weight="1"
                            android:layout_marginTop="40dp" android:layout_marginLeft="25dp"/>
                    <Button
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/pickledbtn" android:layout_weight="1"
                            android:layout_marginTop="40dp" android:layout_marginLeft="20dp"
                            android:layout_marginRight="40dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="8dp">
        <Button
                android:text="Grocery List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/GroceryBtn"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

